{% extends 'principal/principal_base.njk' %} {% block breadcrumb %}
{{ super() }}
<li class="breadcrumb-item active">Professores</li>
{% endblock%} {% block content %}
<div class="questions-header">
  <h1>Professores</h1>
</div>
<a href="/principal/teachers/new" class="btn btn-primary btn-submit mb-4">
  <i class="bi bi-person-plus"></i>Novo Professor
</a>
<div class="table-responsive-md">
  <table class="table table-striped table-hover table-bordered align-middle">
    <thead class="table-light">
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>CPF</th>
        <th>Turmas</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      {% for teacher in teachers_data %}
      <tr class="">
        <td scope="row">{{ teacher.id }}</td>
        <td>{{ teacher.name }}</td>
        <td>{{ teacher.email }}</td>
        <td>{{ teacher.cpf }}</td>
        <td>{{ teacher.classes }}</td>
        <td>
          <a
            name="delete"
            id="delete"
            class="btn btn-danger"
            href="/principal/teachers/{{ teacher.id }}/delete"
            role="button"
          >
            <i class="bi bi-trash"></i>Deletar</a
          >
          <a
            name="more"
            id="more"
            class="btn btn-primary"
            href="/principal/teachers/{{ teacher.id }}"
            role="button"
          >
            <i class="bi bi-three-dots-vertical"></i>Ver Mais</a
          >
        </td>
      </tr>
      {% else %}
      <tr>
        <td colspan="6">Não há professores cadastrados...</td>
      </tr>
      {% endfor %}
    </tbody>
    <tfoot></tfoot>
  </table>
</div>
{% endblock %}