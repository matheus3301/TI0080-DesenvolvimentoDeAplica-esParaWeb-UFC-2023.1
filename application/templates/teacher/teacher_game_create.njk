{% extends 'teacher/teacher_base.njk' %} {% block breadcrumb %}
{{ super() }}
<li class="breadcrumb-item">Minhas Turmas</li>
<li class="breadcrumb-item active">Criar Jogo</li>
{% endblock %} {% block content %}
<div class="questions-header">
  <h1>Criar Jogo</h1>
</div>
<div class="container d-flex justify-content-center align-items-center">
  <div
    class="row g-2 d-flex justify-content-center align-items-center create-question"
  >
    <form class="justify-content-center align-items-center" method="POST">
      <div class="mb-3">
        <label for="examId" class="form-label">Prova (Template):</label>
        <select class="form-select form-select-lg" name="examId" id="examId">
          {% for exam in exams_data %}
          <option value="{{ exam.id }}">{{ exam.title }}</option>
          {% endfor %}
        </select>
      </div>
      <button type="submit" class="btn btn-primary btn-submit">Criar</button>
    </form>
  </div>
</div>
{% endblock %}
