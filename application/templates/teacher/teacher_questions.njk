{% extends 'teacher/teacher_base.njk' %}

{% block breadcrumb %}
    {{ super() }}
    <li class="breadcrumb-item active">Minhas Questões</li>
    {% endblock%}

    {% block content %}
        <div class="row">
            <div class="col-md-12 questions-header">
                <h1>Banco de Questões</h1>
                <a
                href="/pages/teacher/questions/create_question.html"
                class="btn btn-primary btn-submit mb-4"
              >
                    <i class="bi bi-person-plus"></i>Adicionar Novo
              </a>
            </div>
            <div class="row questions-grid">
                {% for question in questions_data %}
                    <div class="col-md-4">
                        <div class="card card-class">
                            <div class="card-body">
                                <h5 class="card-title">{{ question.title }}</h5>
                                <p class="card-text">{{ question.statement }}</p>
                                <a href="#" class="btn btn-primary">
                                    Acesse a questão
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endblock content %}