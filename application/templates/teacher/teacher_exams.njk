{% extends 'teacher/base.njk' %}

{% block breadcrumb %}
    {{ super() }}
    <li class="breadcrumb-item active">Minhas Provas</li>
{% endblock%}

{% block content %}
    <div class="row">
        <div class="col-md-12 questions-header mb-2">
            <h1>Minhas Provas</h1>
            <a href="/teacher/exams/new" class="btn btn-primary btn-submit mb-4">
                <i class="bi bi-person-plus"></i>Adicionar Nova
            </a>
        </div>
        <form>
            <div class="mb-3 d-flex gap-2">
                <input type="text" name="query" class="form-control sm" placeholder="Filtro..." value="{% if query %}{{ query }}{% endif %}" aria-describedby="helpId">
                <button type="submit" class="btn btn-primary">Filtrar</button>
            </div>
        </form>
        <div class="row questions-grid">
            {% for exam in exams_data %}
                <div class="col-md-4">
                    <div class="card card-class">
                        <div class="card-body">
                            <h5 class="card-title">{{ exam.title }}</h5>
                            <p class="card-text">{{ exam.statement }}</p>
                            <a href="/teacher/exams/{{exam.id}}" class="btn btn-primary">
                                    Acesse a quest√£o
                                </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}