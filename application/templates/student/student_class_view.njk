{% extends 'student/student_base.njk' %} {% block breadcrumb %}
{{ super() }}
<li class="breadcrumb-item">Minhas Turmas</li>
<li class="breadcrumb-item active">{{ class_data.id }}</li>
{% endblock %} {% block content %}
<h1>{{ class_data.title }}</h1>

<!-- Nav tabs -->
<ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button
      class="nav-link active text-dark"
      id="home-tab"
      data-bs-toggle="tab"
      data-bs-target="#home"
      type="button"
      role="tab"
      aria-controls="home"
      aria-selected="true"
    >
      Jogos
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button
      class="nav-link text-dark"
      id="profile-tab"
      data-bs-toggle="tab"
      data-bs-target="#profile"
      type="button"
      role="tab"
      aria-controls="profile"
      aria-selected="false"
    >
      Turma
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button
      class="nav-link text-dark"
      id="settings-tab"
      data-bs-toggle="tab"
      data-bs-target="#settings"
      type="button"
      role="tab"
      aria-controls="settings"
      aria-selected="false"
    >
      Opções
    </button>
  </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div
    class="tab-pane active"
    id="home"
    role="tabpanel"
    aria-labelledby="home-tab"
    tabindex="0"
  >
    <div class="card mb-5">
      <div class="card-header">Acontecendo Agora!!!</div>
      <div class="card-body">
        <h5 class="card-title">Simulado para a AP1</h5>
        <p class="card-text">Alunos Jogando: 5</p>
        <a href="game.html" class="btn btn-primary btn-submit">
          <i class="bi bi-controller"></i>
          Entrar no jogo!</a
        >
      </div>
    </div>
    <h1>Jogos Passados</h1>
    <div class="card mb-3">
      <div class="card-header">02/05/23 - 07:30</div>
      <div class="card-body">
        <h5 class="card-title">Atividade de Classe</h5>
        <p class="card-text">Alunos que participaram: 10</p>
        <p class="card-text">Vencedor: Davi</p>
      </div>
    </div>
    <div class="card mb-3">
      <div class="card-header">01/05/23 - 07:30</div>
      <div class="card-body">
        <h5 class="card-title">Prova Surpresa</h5>
        <p class="card-text">Alunos que participaram: 20</p>
        <p class="card-text">Vencedor: Alexandre</p>
      </div>
    </div>
  </div>
  <div
    class="tab-pane"
    id="profile"
    role="tabpanel"
    aria-labelledby="profile-tab"
    tabindex="0"
  >
    {# TODO: Vitor - Colocar aqui as informações do professor e a lista dos
    alunos que participam da turma #}
  </div>
  <div
    class="tab-pane"
    id="settings"
    role="tabpanel"
    aria-labelledby="settings-tab"
    tabindex="0"
  >
    <a
      name="exit-class"
      id="exit-class"
      class="btn btn-danger"
      href="/student/classes/{{ class_data.id }}/exit"
      role="button"
      >Sair da Turma</a
    >
  </div>
</div>

{% endblock %}
